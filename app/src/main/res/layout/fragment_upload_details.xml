<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadDetailsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >

        <androidx.cardview.widget.CardView
            android:layout_marginTop="30dp"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:paddingLeft="80dp"
            android:paddingRight="80dp"
            android:backgroundTint="@color/background"
            app:cardCornerRadius="30dp">
        <ImageView
            android:id="@+id/miImagenJuego"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="150dp"

            android:src="@drawable/ic_outline_camera_alt_24" />
        </androidx.cardview.widget.CardView>

        <EditText
            android:layout_marginBottom="10dp"
            android:id="@+id/miTituloJuego"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Tìtulo*" />

        <EditText
            android:id="@+id/miDescripcionJuego"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Descripcion*" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <EditText
            android:id="@+id/miPrecioJuego"
            android:layout_marginBottom="10dp"
            android:layout_width="370dp"
            android:layout_height="60dp"
            android:hint="Precio*" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="€"
                android:textColor="@color/black"
                android:textStyle="bold"/>

        </LinearLayout>
        <EditText
            android:id="@+id/miConsolaJuego"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Consola*" />


    </LinearLayout>

    <Button
        android:id="@+id/miBotonUpload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/subir"
        android:backgroundTint="#36DFE4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>